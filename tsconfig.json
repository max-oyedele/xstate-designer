{
	"compilerOptions": {
		"baseUrl": "src",
		"outDir": "build/dist",
		"module": "esnext",
		"target": "es5",
		"lib": ["es6", "dom"],
		"sourceMap": true,
		"allowJs": true,
		"jsx": "react",
		"moduleResolution": "node",
		"rootDir": "src",
		"esModuleInterop": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"skipLibCheck": true
	},
	"include": ["src/**/*"],
	"exclude": [
		"node_modules",
		"build",
		"scripts",
		"acceptance-tests",
		"webpack",
		"jest",
		"src/setupTests.ts",
		"src/**/*.test.*s"
	]
}
